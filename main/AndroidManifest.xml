<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="eco.social.media">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="eco.social.media.InstagramOffline"
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:roundIcon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="eco.social.media.Messages.MessageActivity"
            android:parentActivityName="eco.social.media.Messages.ChatActivity"></activity>
        <activity
            android:name="eco.social.media.Messages.ChatActivity"
            android:parentActivityName="eco.social.media.Home" />
        <activity android:name="eco.social.media.Stories.StoryActivity" />
        <activity android:name="eco.social.media.Stories.AddStoryActivity" />
        <activity android:name="eco.social.media.Profile.FollowersFollowing" />
        <activity android:name="eco.social.media.Search.UserSearchViewPost" />
        <activity android:name="eco.social.media.Search.UserSearchProfileActivity" />
        <activity android:name="eco.social.media.Profile.ViewComments" />
        <activity android:name="eco.social.media.Post.PostActivity" />
        <activity android:name="eco.social.media.VerifyPhone" />
        <activity android:name="eco.social.media.Registration" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
        <activity android:name="eco.social.media.Login" />
        <activity android:name="eco.social.media.Profile.EditProfile" />
        <activity android:name="eco.social.media.Profile.Account_Settings" />
        <activity
            android:name="eco.social.media.Home"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name="eco.social.media.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name="eco.social.media.Messages.Notification.MyFirebaseMessagingService"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service
            android:name="eco.social.media.Messages.Notification.MyFirebaseIdService"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>